
<div class="col-md-4" data-id="<% portfolio_item.id%>">
  <div class="card mb-4 box-shadow" data-id=<%= portfolio_item %>>
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></span> -
         <%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
      </div>
      </div>
  </div>
</div>
