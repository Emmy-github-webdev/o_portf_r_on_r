      </label>
    </div>

    <div class="form-group mb-3">
      <label class="btn btn-primary">
        Upload a main image file <%= form.file_field :main_image, style: 'display: none;' %>
      </label>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="form-group mb-3">
      <div class="form-group mb-3">
        <%= form.label :body, style: "display: block" %>
        <%= form.text_area :body, class: 'form-control', rows: "10" %>
      </div>
    </div>
  </div>
 
  <div class="form-group mb-3">
    <h2>Technologies used: </h2>
    <div>
    <%= form.fields_for :technologies do |technology_form|%>
      <div class="form-group mb-1">
        <%= technology_form.label :name%>
        <%= technology_form.text_field :name, class: 'form-control' %>
      </div>
    <% end %>
    </ul>
  </div>
  <div class="form-group mb-3">
    <%= form.submit 'Create Project', class: 'btn btn-primary' %>
  </div>
  </div>
<% end %>
